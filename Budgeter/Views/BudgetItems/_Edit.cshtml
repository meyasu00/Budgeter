@model Budgeter.Models.CodeFirst.BudgetItem

@{
    Layout = null;
}
<h2><strong>Edit</strong> Budget Item</h2>
@using (Html.BeginForm("Edit", "BudgetItems"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.CreatorId)
    @Html.HiddenFor(m => m.HouseholdId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group login-input">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Enter Budget Name" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.DropDownList("CategoryId", null, "Choose Category", htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button id="budget-btn" class="btn btn-danger" type="button"><span id="budget-text">Goal Spending Limit</span></button>
        <input id="budget-ck" type="checkbox" name="IsIncome" value="false" />
        @Html.ValidationMessageFor(model => model.Income, "", new { @class = "text-danger" })
    </div>
    <div class="form-group login-input">
        @Html.EditorFor(model => model.AmountLimit, new { htmlAttributes = new { @class = "form-control text-input", id = "amt-editor" } })
        @Html.ValidationMessageFor(model => model.AmountLimit, "", new { @class = "text-danger" })
    </div>
    <div class="form-group login-input">
        @Html.DropDownList("WarningId", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.WarningId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <button id="allow-btn" class="btn btn-success" type="button"><span id="allow-text">Anyone Can Edit</span></button>
        <input id="allow-ck" type="checkbox" name="AllowEdits" value="true" checked />
    </div>
    <div class="form-group pull-right">
        <button type="submit" class="btn btn-teal">Save Changes</button>
        <button type="button" class="cancel-budg btn btn-teal">Cancel</button>
    </div>

}